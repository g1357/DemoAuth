<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewModels="clr-namespace:WebApiMobileClient.ViewModels"
             x:Class="WebApiMobileClient.Views.LoginPage">
    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" WidthRequest="400" 
                     VerticalOptions="Center" HorizontalOptions="Center"
                     Spacing="20" Padding="20">
            <Label Text="Имя пользователя или эл. почта:" />
            <Entry Text="{Binding LoginData.Username}" Placeholder="User Name"/>
            <Label Text="Пароль:" />
            <Entry Text="{Binding LoginData.Password}" Placeholder="Password"
                   IsPassword="True"/>
            <Button Text="ВХОД" Command="{Binding LoginCommand}"
                    FontSize="30" TextColor="White" BackgroundColor="DeepSkyBlue" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>