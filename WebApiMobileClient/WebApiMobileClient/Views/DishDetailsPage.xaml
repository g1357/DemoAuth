<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebApiMobileClient.Views.DishDetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Подробная информация о блюде" />
            <Image Source="{Binding DishInfo.PhotoSource}"
                   WidthRequest="200" HeightRequest="200" />
            <Label Text="{Binding DishInfo.Name}" 
                   Style="{DynamicResource ListItemTextStyle}" />
            <Label Text="{Binding DishInfo.Description}" 
                   Style="{DynamicResource ListItemDetailTextStyle}"/>
            <StackLayout Orientation="Horizontal" Padding="10">
                <Label Text="Вес:" />
                <Label Text="{Binding DishInfo.Weight}"/>
                <Label Text="гр." />
                <Label Text="Цена:" />
                <Label Text="{Binding DishInfo.Price}"/>
                <Label Text="руб." />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>