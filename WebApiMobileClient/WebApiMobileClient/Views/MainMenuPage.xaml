<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:WebApiMobileClient.ViewModels"
             x:Class="WebApiMobileClient.Views.MainMenuPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" WidthRequest="500" 
                     VerticalOptions="Center" HorizontalOptions="Center"
                     Spacing="20" Padding="20">
            <Label Text="Выбирите действие:" />
            <Button Text="ПОЛНОЕ МЕНЮ" Command="{Binding FullMenuCommand}"
                    FontSize="30" TextColor="White" BackgroundColor="DeepSkyBlue" />
            <Button Text="ПОЛНОЕ МЕНЮ с группировкой" Command="{Binding FullMenuGroupedCommand}"
                    FontSize="30" TextColor="White" BackgroundColor="DeepSkyBlue" />
            <Button Text="ТЕКУЩЕЕ МЕНЮ" Command="{Binding CurrentMenuCommand}"
                    FontSize="30" TextColor="White" BackgroundColor="DeepSkyBlue" />
            <Label Text="{Binding Message}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>